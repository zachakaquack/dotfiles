enabled_layouts splits:split_axis=horizontal
background #0f0103
background_opacity 0.95
window_padding_width 4 4 0 4

allow_remote_control yes

font_size 14
font_family      family="FiraCode Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto

map alt+h neighboring_window left
map alt+j neighboring_window down
map alt+k neighboring_window up
map alt+l neighboring_window right
map alt+shift+j launch --location=hsplit
map alt+shift+l launch --location=vsplit
map ctrl+alt+h resize_window narrower
map ctrl+alt+l resize_window wider
map ctrl+alt+j resize_window shorter
map ctrl+alt+k resize_window taller
